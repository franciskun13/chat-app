<h2 class="ui center aligned icon header">
  <i class="circular brown coffee icon"></i>
  Real Time Chat App
</h2>
<%= render 'layouts/alert-success' %>
<div class="ui two column grid">

    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id="messages">
               <div class="ui large feed" id="message-container">
                    <%= render @messages  %>
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, html: {class: "ui reply form", role: "form" }, url: message_path, remote: true) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                        <%= f.text_field :body,  autocomplete: "off", placeholder: "Enter a message" %>
                        <%= f.button '<i class="bordered inverted circular brown paper plane icon"></i>'.html_safe %>
                        </div>
                    </div>
                <% end %>
                
            </div>

        </div>    
    </div>

    <div class="four wide column">
            <div class="ui fluid raised card chatbox">
                <div class="content">
                    <div class="ui inverted vertical menu">
                    <a><%= link_to 'Chatroom', chatroom_path, class: "item" %></a>
                    </div>
                </div>
            </div>
    </div>
</div>